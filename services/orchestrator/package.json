{
  "name": "beauty-platform-orchestrator",
  "version": "1.0.0",
  "description": "Beauty Platform Node.js Orchestrator - Process Manager and Service Orchestration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,md}'",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-winston": "^4.2.0",
    "winston": "^3.10.0",
    "zod": "^3.22.4",
    "execa": "^7.2.0",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "@beauty-platform/service-registry": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/lodash": "^4.14.195",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "vitest": "^0.34.1",
    "@vitest/coverage-c8": "^0.33.0",
    "@types/jest": "^29.5.4",
    "jest": "^29.6.2",
    "@jest/globals": "^29.6.2",
    "ts-jest": "^29.1.1",
    "eslint": "^8.47.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "prettier": "^3.0.2"
  },
  "keywords": [
    "beauty-platform",
    "orchestrator",
    "process-manager",
    "microservices",
    "nodejs",
    "typescript"
  ],
  "author": "Design Corporation",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
