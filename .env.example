# ==========================================
# Beauty Platform - Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/beauty_platform_new"
POSTGRES_USER="beauty_platform_user"
POSTGRES_PASSWORD="your_secure_password"
POSTGRES_DB="beauty_platform_new"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-this"
JWT_ACCESS_TOKEN_TTL="12h"
JWT_REFRESH_TOKEN_TTL="7d"

# MFA
MFA_MASTER_KEY="your-mfa-master-key-32-chars-minimum"
MFA_ISSUER="Beauty Platform"

# Stripe Payment Integration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_WEBHOOK_ENDPOINT_SECRET="whsec_your_endpoint_secret"

# PayPal Integration (optional)
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox" # or "live" for production

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
EMAIL_FROM="Beauty Platform <noreply@beauty-platform.com>"

# SMS Configuration (optional)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Telegram Notifications
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"
TELEGRAM_CHAT_ID="your_telegram_chat_id"
TELEGRAM_ENABLED="false"

# Application URLs
APP_URL="http://localhost:6001"
ADMIN_URL="http://localhost:6002"
CLIENT_URL="http://localhost:6003"
API_URL="http://localhost:6020"

# Service Ports
PORT_LANDING="6000"
PORT_CRM="6001"
PORT_ADMIN="6002"
PORT_CLIENT="6003"
PORT_GATEWAY="6020"
PORT_AUTH="6021"
PORT_CRM_API="6022"
PORT_NOTIFICATION="6028"
PORT_PAYMENT="6029"
PORT_MCP="6025"
PORT_IMAGES="6026"
PORT_BACKUP="6027"

# Redis (for queues and caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Image Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="info"
MONITORING_SERVICE_URL="http://localhost:6030"

# Auto-Restore System
SMART_RESTORE_SCRIPT="/root/beauty-platform/deployment/auto-restore/smart-restore-manager.sh"
SMART_RESTORE_WORKDIR="/root/beauty-platform"
AUTO_RESTORE_ENABLED="true"

# Development
NODE_ENV="development"
DEBUG="beauty:*"
ENABLE_TRACING="false"

# Production (uncomment for production)
# NODE_ENV="production"
# FORCE_HTTPS="true"
# SECURE_COOKIES="true"
# CORS_ORIGIN="https://beauty.designcorp.eu"

# Multi-language Support
DEFAULT_LANGUAGE="ru"
AVAILABLE_LANGUAGES="ru,en,pl,ua"

# Currency
DEFAULT_CURRENCY="EUR"
AVAILABLE_CURRENCIES="EUR,PLN,UAH,USD,GBP,CZK"