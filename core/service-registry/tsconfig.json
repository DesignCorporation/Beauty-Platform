{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts",
    "*.spec.ts"
  ]
}
