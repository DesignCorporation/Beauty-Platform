# Beauty Platform Backup Service - Environment Configuration

# Server Configuration
PORT=6027
NODE_ENV=development
LOG_LEVEL=info

# JWT Authentication (должен совпадать с auth-service)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-beauty-platform-2025

# Rate Limiting
RATE_LIMIT_REQUESTS=200

# Backup Configuration
BACKUP_ROOT=/root/BACKUPS/production
BACKUP_SCRIPT=/root/SCRIPTS/production-backup.sh
BACKUP_LOG_FILE=/var/log/beauty-backup.log

# Storage Limits
MAX_BACKUP_SIZE_MB=10240
MIN_FREE_SPACE_MB=1024

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Notification Settings (будущие расширения)
EMAIL_ENABLED=false
EMAIL_FROM=backup@beauty.designcorp.eu
WEBHOOK_URL=

# Security Settings
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=/var/log/beauty-backup-audit.log

# Debug Settings (только для development)
DEBUG_BACKUP_SCRIPT=false
SIMULATE_BACKUP_PROGRESS=false