# API Gateway Configuration
API_GATEWAY_PORT=6020
API_GATEWAY_HOST=0.0.0.0
NODE_ENV=development

# Service URLs (can be overridden for different environments)
AUTH_SERVICE_URL=http://localhost:6021
IMAGES_SERVICE_URL=http://localhost:6026  
MCP_SERVICE_URL=http://localhost:6025
BOOKING_SERVICE_URL=http://localhost:6022
NOTIFICATION_SERVICE_URL=http://localhost:6023
PAYMENT_SERVICE_URL=http://localhost:6024

# Security
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Smart Restore Configuration
SMART_RESTORE_SCRIPT=/root/beauty-platform/deployment/auto-restore/smart-restore-manager.sh
SMART_RESTORE_WORKDIR=/root/beauty-platform
MONITORING_SERVICE_URL=http://localhost:6030

