{
  "name": "@beauty-platform/notification-service",
  "version": "1.0.0",
  "description": "Beauty Platform Notification Service - Email, SMS, Push notifications",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
